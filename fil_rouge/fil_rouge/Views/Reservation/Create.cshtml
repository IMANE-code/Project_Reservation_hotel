@model fil_rouge.Models.Reservation_Hotel


@{
    var hotels = ViewBag.hotels;
}

<h1>Create</h1>

<h4>Reservation_Hotel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Datedebut" class="control-label"></label>
                <input asp-for="Datedebut" class="form-control" />
                <span asp-validation-for="Datedebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Datefin" class="control-label"></label>
                <input asp-for="Datefin" class="form-control" />
                <span asp-validation-for="Datefin" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="IsValid" class="control-label"></label>
                <input value="pending" asp-for="IsValid" class="form-control" />
                <span asp-validation-for="IsValid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Idhotel" class="control-label"></label>
                <select asp-for="Idhotel" class="browser-default control-label custom-select">
                    <option selected>Open this select hotel</option>
                    @foreach (var hotel in hotels)
                    {
                        <option value="@hotel.Id">@hotel.Name</option>

                    }

                </select>
                <span asp-validation-for="Idhotel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
